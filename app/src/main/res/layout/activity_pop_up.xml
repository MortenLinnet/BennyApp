<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morte.bennyapp.PopUpActivity">

    <Button
        android:id="@+id/PopUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="ClosePopUp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PopUpTextView"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/PopUpTextView"
        android:layout_width="226dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec ultricies eu justo eu dignissim. Nulla a odio volutpat, consequat eros id, egestas dolor. Sed a augue eget odio bibendum tincidunt. Aenean pharetra nisl finibus feugiat dignissim. Etiam lobortis porttitor purus, at volutpat leo pellentesque eu. Donec aliquam odio at augue rhoncus, a varius justo volutpat. Praesent ut nulla purus. Duis et neque diam. Maecenas ut turpis at nisl venenatis interdum sit amet ut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />
</android.support.constraint.ConstraintLayout>
