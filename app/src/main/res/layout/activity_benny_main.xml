<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".BennyMain"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:contentDescription="@string/animation1"
                android:id="@+id/imageButton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="viewMessage"
                android:background="@null"
                app:srcCompat="@drawable/m1"
                />

            <ImageButton
                android:contentDescription="@string/animation2"
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="viewMessage"
                android:background="@null"
                app:srcCompat="@drawable/m2"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:contentDescription="@string/animation3"
                android:id="@+id/imageButton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="viewMessage"
                android:background="@null"
                app:srcCompat="@drawable/m3"
                />

            <ImageButton
                android:contentDescription="@string/animation4"
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="viewMessage"
                android:background="@null"
                app:srcCompat="@drawable/m4"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:contentDescription="@string/animation5"
                android:id="@+id/imageButton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="viewMessage"
                android:background="@null"
                app:srcCompat="@drawable/m5"
                />

            <ImageButton
                android:contentDescription="@string/animation6"
                android:id="@+id/settingsOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="Settings"
                android:background="@null"
                app:srcCompat="@drawable/m6"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:background="@drawable/gradient2">

        <Button
            android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="25dp"
            android:text="@string/playText"
            android:onClick="onClick"
            android:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>