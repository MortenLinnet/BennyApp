<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.morte.bennyapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    // Permission to use mic
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    // Permission to access local phone storage
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    // Permission to access write
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    // disable sleep
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BennyEyes"
            android:screenOrientation="landscape" />
        <activity android:name=".Settings" />
        <activity android:name=".LoggingData" />
        <activity
            android:name=".SizeOfEyes"
            android:screenOrientation="landscape" />
        <activity android:name=".LevelOfDifficulty" />
        <activity android:name=".OldDesign" />
        <activity
            android:name=".BennyMain"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PopUpActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".MicNotPluggedIn"
            android:screenOrientation="landscape" />
        <activity android:name=".Introduction" />
        <activity android:name=".OldIntroduction" />
        <activity android:name=".Oldintro"></activity>
    </application>

</manifest>